---
import RingText from "components/RingText.astro";
import IconLogo from "icons/IconLogo.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Archivo:wght@300;600;900&display=swap"
			rel="stylesheet"
		/>
		<title>The Dot.to</title>
	</head>

	<body>
		<div class="layout-container">
			<header class="layout-header">
				<IconLogo />
				<h3>the dot.to</h3>
			</header>

			<div class="layout-content">
				<slot />
			</div>

			<footer class="layout-footer">
				<div>
					<h5>Developed with intent by Reinny Almonte</h5>

					<p>© — Dominican Republic</p>
				</div>

				<RingText identifier="keep-scrolling">constant improvement —— the meaningful effort ——</RingText>
			</footer>
		</div>
	</body>
</html>

<style is:global>
  html {
    @apply text-base bg-white-01 text-green-01 font-default font-300;
  }

	html, body {
		@apply overflow-hidden;
	}

	body {
		@apply h-screen max-h-screen w-screen;
		@apply py-4 lg:py-8 px-8 lg:px-16;
	}

  .layout-container {
    @apply relative h-full grid grid-cols-1 overflow-hidden;
		@apply gap-2 lg:gap-4;
    grid-template-rows: auto 1fr auto;
  }

  .layout-container > .layout-header {
    @apply text-green-02 flex items-center gap-4 border-b-2 border-b-green-01 sticky;
		@apply pb-2 lg:pb-4;
  }

  .layout-header > h3 {
    @apply text-green-01 font-900;
		@apply text-lg md:text-xl lg:text-2xl;
  }

  .layout-header > nav {
    @apply flex items-center;
		@apply gap-4 lg:gap-8;
  }

	.layout-container > .layout-content {
		@apply flex flex-col overflow-y-auto;
		@apply gap-8 md:gap-14 lg:gap-16;
	}

  .layout-container > .layout-footer {
    @apply border-t-2 border-t-green-01 flex;
		@apply pt-2 lg:pt-4;
  }

	.layout-footer > div {
		@apply flex flex-col justify-end gap-2 md:gap-4 lg:gap-6;
		@apply basis-1/2 md:basis-3/4;
	}

	.layout-footer > div > h5 {
		@apply font-600;
		@apply text-base md:text-lg lg:text-xl;
	}

	.layout-footer > div > p {
		@apply text-sm md:text-base lg:text-lg;
	}
</style>
